<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/man_one"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/front_desk" />

            <Button
                android:id="@+id/man_two"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/man_one"
                android:background="@drawable/button_action_blue"/>

            <Button
                android:id="@+id/man_three"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/man_two"
                android:background="@drawable/button_action_blue"/>

            <Button
                android:id="@+id/man_four"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/man_three"
                android:background="@drawable/button_action_blue"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/man_five"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/man_four"
                android:background="@drawable/button_action_blue" />

            <Button
                android:id="@+id/man_six"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/man_five"
                android:background="@drawable/button_action_blue" />

        </RelativeLayout>
    </RelativeLayout>
