<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/man_one"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="xsder343"
                    android:textSize="30sp"
                    android:textAllCaps="true"
                    android:textStyle="bold|italic"/>

                <Button
                    android:id="@+id/man_two"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="90dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/man_one"
                    android:background="@drawable/button_action_blue"/>

                <Button
                    android:id="@+id/man_three"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="90dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/man_two"
                    android:background="@drawable/button_action_blue"/>

                <Button
                    android:id="@+id/man_four"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="90dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/man_three"
                    android:background="@drawable/button_action_blue"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/man_five"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="90dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/man_four"
                    android:background="@drawable/button_action_blue" />

                <Button
                    android:id="@+id/man_six"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="90dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/man_five"
                    android:background="@drawable/button_action_blue" />
            </RelativeLayout>
            <com.software.shell.fab.ActionButton
                android:id="@+id/action_button_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                />
        </RelativeLayout>
    </RelativeLayout>
